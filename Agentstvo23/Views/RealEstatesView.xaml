<UserControl x:Class="Agentstvo23.Views.RealEstatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:vm="clr-namespace:Agentstvo23.ViewModels"
             xmlns:local="clr-namespace:Agentstvo23.Views"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance {x:Type vm:RealEstatesViewModel}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedAsyncCmd}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        
        <StackPanel DockPanel.Dock="Top" Margin="5">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource BtnImage}" Command="{Binding AddNewBuildingCmd}">
                    <Button.Content>
                        <Image Source="/Resources/Images/add.png" Height="25"/>
                    </Button.Content>
                </Button>
                
                <Button Style="{StaticResource BtnImage}">
                    <Image Source="/Resources/Images/refresh.png" Height="25" />
                </Button>

                <Button Style="{StaticResource BtnImage}"/>

                <TextBox Style="{StaticResource TboxCommon}" Margin="5 0" MinWidth="50" Text="{Binding BuildingFilter, UpdateSourceTrigger=PropertyChanged}"/>

                <ComboBox BorderThickness="0 0 0 2" Width="100" Background="{StaticResource ColorSecondary}"/>
            </StackPanel>
            
            <Expander Header="Дополнительно">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <WrapPanel Orientation="Horizontal" ItemWidth="150">
                    <StackPanel Style="{StaticResource StackPanel-Margin5}">
                        <TextBlock Text="Адрес" Style="{StaticResource TblockCommon}"/>
                        <TextBox Style="{StaticResource TboxCommon}" Text="{Binding AdressFilter, Delay=300, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource StackPanel-Margin5}">
                        <TextBlock Text="Количество этажей" Style="{StaticResource TblockCommon}"/>
                            <TextBox Style="{StaticResource TboxCommon}" Text="{Binding FloorFilter, Delay=300, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource StackPanel-Margin5}">
                        <TextBlock Text="Количество подземных этажей" TextWrapping="Wrap" Style="{StaticResource TblockCommon}"/>
                            <TextBox Style="{StaticResource TboxCommon}" Text="{Binding UndergroundFloorFilter, Delay=300, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource StackPanel-Margin5}">
                        <TextBlock Text="Кадастровый блок" Style="{StaticResource TblockCommon}"/>
                        <TextBox Style="{StaticResource TboxCommon}" Text="{Binding CadastralBlockFilter, Delay=300, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource StackPanel-Margin5}">
                        <TextBlock Text="Площадь" Style="{StaticResource TblockCommon}" HorizontalAlignment="Center"/>
                        <WrapPanel ItemWidth="70">
                            <TextBox Style="{StaticResource TboxCommon}"/>
                            <TextBox Style="{StaticResource TboxCommon}"/>
                        </WrapPanel>
                    </StackPanel>

                        <StackPanel Style="{StaticResource StackPanel-Margin5}">
                        <TextBlock Text="Цена за метр" Style="{StaticResource TblockCommon}" HorizontalAlignment="Center"/>
                        <WrapPanel ItemWidth="70">
                            <TextBox Style="{StaticResource TboxCommon}"/>
                            <TextBox Style="{StaticResource TboxCommon}"/>
                        </WrapPanel>
                    </StackPanel>

                    <StackPanel Style="{StaticResource StackPanel-Margin5}">
                        <TextBlock Text="Кадастровая стоимость" Style="{StaticResource TblockCommon}" HorizontalAlignment="Center"/>
                        <WrapPanel ItemWidth="70">
                            <TextBox Style="{StaticResource TboxCommon}" />
                            <TextBox Style="{StaticResource TboxCommon}" />
                        </WrapPanel>
                    </StackPanel>

                </WrapPanel>
                    <Button Grid.Column="1" VerticalAlignment="Bottom" Content="Применить"/>
                </Grid>
            </Expander>

        </StackPanel>
 
        <DataGrid ItemsSource="{Binding BuildingsView}"  Name="Test" SelectedItem="{Binding SelectedBuilding}" SelectionMode="Single" AllowDrop="True"
                  IsReadOnly="True" AutoGenerateColumns="False" Margin="5 0" >
            
            <DataGrid.Resources>
                <ContextMenu  x:Key="CtxMenu">
                        <MenuItem Header="Редактировать"/>
                        <MenuItem Header="Удалить" Command="{Binding Path=DataContext.RemoveBuilding, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding SelectedBuilding}"/>
                </ContextMenu>
            </DataGrid.Resources>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="ContextMenu" Value="{StaticResource CtxMenu}"/>
                </Style>
            </DataGrid.RowStyle>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="CadastralNumber" Binding="{Binding CadastralNumber}"/>
                <DataGridTextColumn Header="Adress" Binding="{Binding Adress}"/>
                <DataGridTextColumn Header="Area" Binding="{Binding Area, StringFormat={}{0:N2}, ConverterCulture=ru-RU}"/>
                <DataGridTextColumn Header="AssignationBuilding" Binding="{Binding AssignationBuilding}"/>
                <DataGridTextColumn Header="CadastralBlock" Binding="{Binding CadastralBlock}"/>
                <DataGridTextColumn Header="CadastralCostValue" Binding="{Binding CadastralCostValue, StringFormat={}{0:C2}, ConverterCulture=ru-RU}"/>
                <DataGridTextColumn Header="CostPerMeter" Binding="{Binding CostPerMeter, StringFormat={}{0:C2}, ConverterCulture=ru-RU}"/>
                <DataGridTextColumn Header="Floors" Binding="{Binding Floors}"/>
                <DataGridTextColumn Header="UndergroundFloors" Binding="{Binding UndergroundFloors}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
